} hkConstraintType;

typedef struct {
    hkConstraintType type;
    RefArray entities( "Entity" );
    // Num Entities is hardcoded for ConstraintData
    Assert( entities.size == 2, "ConstraintData has an incorrect Num Entities" );
    uint priority;
    
    switch ( type ) {
        case BallAndSocket:
            BallAndSocketDesc desc;
            break;
        case Hinge:
            HingeDesc desc;
            break;
        case LimitedHinge:
            LimitedHingeDesc desc;
            break;
        case Prismatic:
            PrismaticDesc desc;
            break;
        case Ragdoll:
            RagdollDesc desc;
            break;
        case StiffSpring:
            StiffSpringDesc desc;
            break;
        case Breakable:
            BreakableDesc desc;
            break;
        case Malleable:
            MalleableDesc desc;
            break;
    }

} ConstraintData <open=true>;

