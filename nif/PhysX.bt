    Vec3 limitPoint;
    uint numLimits;
    if ( numLimits > 0 ) {
        struct {
            Vec3 limitPlaneNormal;
            float limitPlaneD;
            if ( version >= Version(20, 4, 0, 0) )
                float limitPlaneR;
        } limits[numLimits] <optimize=true>;
    }

