typedef struct {
    NxJointType jointType;
    STRING name;
    NiPhysXJointActor actors[2];
    float maxForce;
    float maxTorque;
    
    if ( version >= Version(20, 5, 0, 3) ) {
        float solverExtrapolationFactor;
        uint useAccelerationSpring;
    }

